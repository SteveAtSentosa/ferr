{
  "name": "ferr",
  "version": "3.0.2",
  "description": "Expressive error handling with a functional focus",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": [
    "error",
    "errors",
    "functional"
  ],
  "files": [
    "dist"
  ],
  "repository": "git@github.com:SteveAtSentosa/ferr.git",
  "author": "Steven Saunders <steve.saunders@technicity.io>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@9.15.4",
  "dependencies": {
    "remeda": "^2.32.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "lint": "eslint .",
    "build": "pnpm run clean && tsup",
    "build:tests": "tsc -p tsconfig.test.json",
    "test": "vitest --run",
    "test:verbose": "vitest --run --reporter=verbose",
    "viz": "tsx vizualize/vizualize.errorMessages.ts",
    "clean": "rimraf ./dist",
    "clean:all": "pnpm run clean && rimraf ./node_modules pnpm-lock.yaml",
    "build-and-check": "pnpm build && pnpm build:tests && pnpm test",
    "release": "bash ./release-guided.sh"
  }
}
